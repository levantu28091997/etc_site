<!-- /sections/header.liquid -->
{% include 'header-v1' %}

{% schema %}
{
  "name": "Header",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Header Homepage"
    },
    {
      "type": "color",
      "id": "hd_home_color_text",
      "label": "Texts, Icons Color",
      "default": "#fff"
    },
    {
      "type": "checkbox",
      "id": "hd_home_enable_transparents",
      "label": "Enable Transparent",
      "default": true
    },
    {
      "type": "color",
      "id": "hd_home_bg_header_normal",
      "label": "Background Color"
    },
    {
      "type": "range",
      "id": "hd_bg_header_opacity",
      "min": 0.1,
      "max": 1,
      "step": 0.1,
      "label": "Opacity Background",
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "enable_sticky_hd_home",
      "label": "Enable Sticky",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "hd_home_logo",
      "label": "Logo Image",
      "info": "140 x 46px .png recommended"
    },
    {
      "type": "range",
      "id": "hd_home_logo_maxwidth",
      "min": 35,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Logo Display Width",
      "default": 140
    },
    {
      "type": "textarea",
      "id": "hd_home_logo_svg",
      "label": "Logo Svg"
    },
    {
      "type": "header",
      "content": "Select Menu"
    },
    {
      "type": "link_list",
      "id": "main_menu_store",
      "label": "Main Menu"
    },
	{
      "type": "header",
      "content": "Icon Header"
    },
	{
        "type": "header",
        "content": "Icon search"
      },
      {
        "type": "text",
        "id": "hd_icon_search",
        "label": "Icon search",
        "info": "[Get icon from here](https:\/\/fontawesome.com\/v4.7.0\/icons\/)",
        "default": "fa fa-search"
      },
      {
        "type": "textarea",
        "id": "hd_icon_search_svg",
        "label": "Icon search SVG"
      },
      {
        "type": "header",
        "content": "Icon Wishlist"
      },
      {
        "type": "text",
        "id": "hd_icon_wishlist",
        "label": "Icon Wishlist",
        "info": "[Get icon from here](https:\/\/fontawesome.com\/v4.7.0\/icons\/)",
        "default": "icon-heart"
      },
      {
        "type": "textarea",
        "id": "hd_icon_wishlist_svg",
        "label": "Icon wishlist SVG"
      },
      {
        "type": "url",
        "id": "url_wishlist",
        "label": "Url Wishlist"
      },
      {
        "type": "header",
        "content": "Icon login"
      },
      {
        "type": "text",
        "id": "hd_icon_login",
        "label": "Icon login",
        "info": "[Get icon from here](https:\/\/fontawesome.com\/v4.7.0\/icons\/)",
        "default": "icon-icon-user"
      },
      {
        "type": "textarea",
        "id": "hd_icon_login_svg",
        "label": "Icon login SVG"
      },
      {
        "type": "header",
        "content": "Icon cart"
      },
      {
        "type": "text",
        "id": "hd_icon_cart",
        "label": "Icon cart",
        "info": "[Get icon from here](https:\/\/fontawesome.com\/v4.7.0\/icons\/)",
        "default": "icon-icon-cart"
      },
      {
        "type": "textarea",
        "id": "hd_icon_cart_svg",
        "label": "Icon cart SVG"
      }
  ]
}
{% endschema %}
